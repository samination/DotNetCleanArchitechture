{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "crudapi-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7",
          "numberOfShards": 1,
          "numberOfReplicas": 0
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "DotnetCrudApi"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=CrudApiDb;user=root;password=root;TreatTinyAsBoolean=true;"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "DotnetCrudApi",
    "Audience": "DotnetCrudApi",
    "Secret": "LocalDevelopmentSuperSecretKey123!",
    "ExpiryMinutes": 1440
  },
  "McpInternal": {
    "SharedKey": "dev-shared-secret-change-me"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ConsumerGroupId": "dotnet-crud-api-order-consumer",
    "OrderPaidTopic": "order-paid",
    "PriceUpdatedTopic": "price-updated",
    "ProductPriceChangedTopic": "product-price-changed"
  },
  "Email": {
    "SmtpHost": "localhost",
    "SmtpPort": 1025,
    "UseSsl": false,
    "Username": "",
    "Password": "",
    "FromAddress": "no-reply@dotnet-crud-api.local",
    "FromName": "Dotnet CRUD API Notifications",
    "NotificationRecipient": "sami-n-roses@hotmail.com"
  }
}
